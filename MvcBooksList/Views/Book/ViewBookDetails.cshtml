@model MvcBooksList.Models.Book
@{
    ViewData["Title"] = "Virtual Book Store | Book Details";
}

<h2><b class="align1">Book Details</b><br /></h2>
<br />
@if (Model != null)
{
    <div class="well">
        <div>
            @Html.DisplayNameFor(model => model.BookName)<br>
            @Html.DisplayFor(model => model.BookName)
        </div>
        <br>
        <div>
            @Html.DisplayNameFor(model => model.Author)<br>
            @Html.DisplayFor(model => model.Author)
        </div>
        <br>
        <div>
            @Html.DisplayNameFor(model => model.Publisher)<br>
            @Html.DisplayFor(model => model.Publisher)
        </div>
        <br>
        <div>
            @Html.DisplayNameFor(model => model.Price)<br>
            @Html.DisplayFor(model => model.Price)
        </div>
        <br>
        <div>
            @Html.DisplayNameFor(model => model.Pages)<br>
            @Html.DisplayFor(model => model.Pages)
        </div>
        <br>
        <div>
            @Html.DisplayNameFor(model => model.Category)<br>
            @Html.DisplayFor(model => model.Category)
        </div>
        <br>
        <div>
            @Html.DisplayNameFor(model => model.Subcategory)<br>
            @Html.DisplayFor(model => model.Subcategory)
        </div>
        <br>
        <div>
            @Html.DisplayNameFor(model => model.AddedBy)<br>
            @Html.DisplayFor(model => model.AddedBy)
        </div>
        <br>
        <div>
            @Html.DisplayNameFor(model => model.ModifiedBy)<br>
            @Html.DisplayFor(model => model.ModifiedBy)
        </div>
        <br>
        <div>
            @Html.DisplayNameFor(model => model.AddedOn)<br>
            @Html.DisplayFor(model => model.AddedOn)
        </div>
        <br>
        <div>
            @Html.DisplayNameFor(model => model.LastModifiedOn)<br>
            @Html.DisplayFor(model => model.LastModifiedOn)
        </div>
        <br>
        <button type="button" class="btn btn-dark">
            Edit
        </button>
        @{
            string id = Model.BookName.Replace(" ", "-");
        }
        <!-- Button trigger modal -->

        <button type="button" class="btn btn-dark" data-toggle="modal" data-target="#@id">
            Delete
        </button>

        <!-- Modal -->
        <div class="modal fade" id="@id" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header bg-light">
                        <h5 class="modal-title" id="exampleModalLongTitle">Delete Book</h5>
                    </div>
                    <form asp-controller="Home" asp-action="DeleteBookName" method="get">
                        <div class="modal-body">
                            Do you want to delete this book @Model.BookName?
                            <input type="hidden" name="bookName" value="@Model.BookName" />
                        </div>
                        <div class="modal-footer">

                            <button type="submit" class="btn btn-dark">Yes</button>
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>

                        </div>
                    </form>
                </div>
            </div>
        </div>
        <button type="button" class="btn btn-dark" data-toggle="modal" data-target="#@id">
            Delist
        </button>

        <!-- Modal -->
        <div class="modal fade" id="@id" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header bg-light">
                        <h5 class="modal-title" id="exampleModalLongTitle">Delist Book</h5>
                    </div>
                    <form asp-controller="Home" asp-action="DelistBookName" method="get">
                        <div class="modal-body">
                            Do you want to delist this book @Model.BookName?
                            <input type="hidden" name="bookName" value="@Model.BookName" />
                        </div>
                        <div class="modal-footer">

                            <button type="submit" class="btn btn-dark">Yes</button>
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>

                        </div>
                    </form>
                </div>
            </div>
        </div>
        <form asp-controller="Home" asp-action="Index" method="get">
            <button type="submit" class="btn btn-dark">
                Cancel
            </button>
        </form>
    </div>

}
else
{
    <h3>No Book with that Name</h3>
}