@model IEnumerable<MvcBooksList.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <form asp-action="Create" method="post">
        <div class="row">

            <div class="form-group">
                <div class="col-auto">
                    

                    <input class="form-control" placeholder="Create new Category" name="categoryName" id="categoryName" />
                </div>
            </div>
            <div class="btn-group">

                <div class="col-auto">
                    <input type="submit" class="btn btn-success" value="Create" />
                </div>
                <div class="col-auto">
                    <input type="reset" class="btn btn-secondary" value="Reset" />
                </div>
            </div>



        </div>
    </form>

</div>

@if (Model != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CategoryName)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.AddedBy)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AddedOn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ModifiedBy)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ModifiedOn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SubCategories)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AddedBy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AddedOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModifiedBy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModifiedOn)
                    </td>
                    <td>
                        @if (item.SubCategories != null)
                            @foreach (SubCategory subCategory in item.SubCategories)
                            {
                                @Html.DisplayFor(s => subCategory.SubCategoryName)
                            }
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <h3>No Categories present</h3>
}

