@model MvcBooksList.Models.SubCategory
        <tr>
            <td>
                @Html.DisplayFor(model => model.SubCategoryName)
            </td>
            <td>
                @Html.DisplayFor(model => model.ModifiedBy)
            </td>
            <td>
                @Html.DisplayFor(model=> model.ModifiedOn)
            </td>
            <td>
                @Html.DisplayFor(model => model.AddedBy)
            </td>
            <td>
                @Html.DisplayFor(model => model.AddedOn)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => model.CategoryName)
            </td>*@
        <td>





            @{
                string id = Model.SubCategoryName.Replace(" ", "-");
            }


            <!-- Button trigger modal -->
            <button type="button" class="btn btn-outline-info" data-toggle="modal" data-target="#@id">
                Edit 
            </button>

            <!-- Modal -->
            <div class="modal fade" id="@id" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLongTitle">Edit SubCategory Name</h5>

                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <form asp-action="UpdateSubCategoryName" method="get">
                            <div class="modal-body">
                                <input type="hidden" name="categoryName" value="@Model.CategoryName" />
                                <input type="hidden" name="oldName" value="@Model.SubCategoryName" />
                                @Html.EditorFor(model => model.SubCategoryName, new { htmlAttributes = new { @class = "form-control" } })


                            </div>
                            <div class="modal-footer">

                                <button type="submit" class="btn btn-primary">Save changes</button>

                            </div>
                        </form>
                    </div>
                </div>
            </div>









            @*@Html.ActionLink("edit", "edit", new { Model.SubCategoryName })*@
            @*@html.actionlink("details", "details", new { /* id=item.primarykey */ }) |
        @html.actionlink("delete", "delete", new { /* id=item.primarykey */ })*@
        </td>
        </tr>

