@model IEnumerable<MvcBooksList.Models.Book>
@{
    ViewData["Title"] = "Virtual Book Store | Books";
}

<div class="row justify-content-between">
    <div class="col-auto">
        <h2><b class="align1">Books</b><br /></h2>
    </div>
    <div>
        
            <a class="btn btn-outline-primary" asp-area="" asp-controller="Home" asp-action="Create">Add New Book</a>
        
       
          <a class="btn btn-outline-secondary" asp-area="" asp-controller="Home" asp-action="ViewDelistedBooks">Show Delisted Books</a>
      
    </div>
</div>
<br />

@if (Model != null)
{
    // <b> <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Create">New Book</a></b>


    <div class="form-horizontal bg3">



        <div class="form-group">


            <table class="table table-hover Custom-finger">
                <tr class="bg-dark text-white-50">
                    <th>
                        @Html.DisplayNameFor(model => model.BookName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Author)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Category)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Subcategory)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Publisher)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>



                </tr>

                @foreach (var item in Model)
                {
                    
                    <tr onclick="location.href = '@Url.Action("ViewBookDetails", "Home", new { BookName = item.BookName})'">

                        <td>
                             @Html.DisplayFor(modelItem => item.BookName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Author)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Category)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Subcategory)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Publisher)
                        </td>
                        <td>
                            $
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>


                    </tr>

                }
            </table>
        </div>
    </div>




}
else
{

    <h3 class="newcls">No Books Available</h3>


}

















































