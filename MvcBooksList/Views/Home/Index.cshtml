@{
    ViewData["Title"] = "Virtual Book Store | Books";
}

<h2><b class="align1">Books</b><br /></h2><br />
<table class="table table-hover">
    <tr>

        <th><a class="text-dark" asp-area="" asp-controller="Home" asp-action="Index">Book Name</a></th>
        <th>Author</th>
        <th>Category</th>
        <th>Subcategory</th>
        <th>Publisher</th>
        <th> Price ($)</th>
    </tr>
   
     
   @foreach (var d in Model)  
    {  
        <tr>  
            <td>@d.BookName</td>  
            <td>@d.Author</td>  
            <td>@d.Category</td>  
            <td>@d.Subcategory</td>  
            <td>@d.Publisher</td>  
            <td>@d.Price</td>  
  
        </tr>  
    }  
</table>
<div class="container">
    <div class="row">
    <div class="col-md-2">
      <b> <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">New Book</a></b>
    </div>
    <div class="col-md-2">
       <b> <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Delisted Books</a></b>
    </div>
        </div>
</div>
