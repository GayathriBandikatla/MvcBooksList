@model MvcBooksList.Models.Book


@{ ViewData["Title"] = "Edit Book Details"; }

<h1>Virtual Book Store</h1>

<h4>Edit Book Details</h4>
<hr />
<div class="row container-fluid">
    <div class="col-md-4">
        <form asp-controller="Home" asp-action="EditBookDetails" asp-route-id="@Model.BookName">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group ">
                <label asp-for="BookName" class="control-label"></label>
                <input asp-for="BookName" class="form-control" />
                <span asp-validation-for="BookName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author" class="control-label"></label>
                <input asp-for="Author" class="form-control" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <select asp-for="Category" asp-items="@ViewBag.Categories" class="form-control"></select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subcategory" class="control-label"></label>
                <select asp-for="Subcategory" asp-items="@ViewBag.Subcategories" class="form-control"></select>
                <span asp-validation-for="Subcategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Publisher" class="control-label"></label>
                <input asp-for="Publisher" class="form-control" />
                <span asp-validation-for="Publisher" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Price($)</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pages" class="control-label"></label>
                <input asp-for="Pages" class="form-control" />
                <span asp-validation-for="Pages" class="text-danger"></span>
            </div>
            <div class="row justify-content-end">
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary mr-4" />
                </div>
                <div class="form-group">
                    <input type="reset" asp-action="Index" value="Cancel" class="btn btn-secondary" onclick="location.href='@Url.Action("Index")'" />
                </div>
            </div>
        </form>
    </div>
</div>
